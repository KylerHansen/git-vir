{
    "name": "git-vir",
    "version": "0.0.3",
    "description": "CLI tool for making life with git and GitHub easier.",
    "keywords": [],
    "homepage": "https://github.com/electrovir/git-vir",
    "bugs": {
        "url": "https://github.com/electrovir/git-vir/issues"
    },
    "repository": {
